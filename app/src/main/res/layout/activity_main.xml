<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@android:color/white">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Files for Upload"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="32dp"
        android:gravity="center" />

    <!-- File Access Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/selectFileAccessButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="File Access Document"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/fileAccessStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No file selected"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone"
                android:paddingTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Network Traffic Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/selectNetworkTrafficButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Network Traffic Document"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/networkTrafficStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No file selected"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone"
                android:paddingTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- System Performance Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/selectSystemPerformanceButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="System Performance Document"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/systemPerformanceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No file selected"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone"
                android:paddingTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- User Behavior Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:elevation="4dp"
        android:layout_marginBottom="32dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/selectUserBehaviorButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Behavior Document"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/userBehaviorStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No file selected"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone"
                android:paddingTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Upload Button -->
    <Button
        android:id="@+id/uploadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Files"
        android:layout_marginTop="32dp"
        android:textColor="@android:color/white"
        android:backgroundTint="?attr/colorPrimary"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />
</LinearLayout>
